# Schema de Variáveis de Ambiente (referência)

# === Aplicação ===
APP_NAME=conttatax
APP_ENV=dev|staging|prod
APP_URL=https://...

# === API ===
PORT=3000
LOG_LEVEL=info|debug

# === MongoDB Atlas ===
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
MONGO_DB=conttatax_<env>

# === CloudAMQP ===
AMQP_URL=amqps://<user>:<pass>@<host>/<vhost>

# === RabbitMQ (alternativo self-managed)
RABBITMQ_HOST=
RABBITMQ_PORT=5672
RABBITMQ_VHOST=/
RABBITMQ_USER=
RABBITMQ_PASSWORD=
RABBITMQ_QUEUE=
RABBITMQ_PREFETCH=20

# === Keycloak ===
KEYCLOAK_BASE_URL=https://keycloak.seudominio.com
KEYCLOAK_REALM=conttatax-<env>
KEYCLOAK_CLIENT_ID=conttatax-web
KEYCLOAK_CLIENT_SECRET=***
KEYCLOAK_ISSUER=${KEYCLOAK_BASE_URL}/realms/${KEYCLOAK_REALM}
KEYCLOAK_JWKS=${KEYCLOAK_ISSUER}/protocol/openid-connect/certs

# === Frontend (Next.js) ===
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_OIDC_ISSUER=
NEXT_PUBLIC_OIDC_CLIENT_ID=

# === Outras integrações (exemplos) ===
REDIS_URL=
S3_BUCKET=
SERPRO_API_KEY=
